@{
    Layout = "_AdminPopupLayout";
}
@model Nop.Plugin.Shipping.FixedOrByWeight.Models.ShippingByWeightModel

<form asp-controller="FixedOrByWeight" asp-action="AddRateByWeighPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Common.AddNew")
        </h1>
        <div class="pull-right">
            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
        </div>
    </div>

    <div class="content">
        <div class="form-horizontal">
            @await Html.PartialAsync("~/Plugins/Shipping.FixedOrByWeight/Views/_CreateOrUpdateRateByWeight.cshtml", Model)
        </div>
    </div>
</form>